<?xml version="1.0"?>

<PropertyList>

  <fx>

    <engine>
      <name>engine1</name>
      <mode>looped</mode>
      <path>Aircraft/F-5E/Sounds/new_by_renan/flylogic/eng_idle_out.wav</path>
      <condition>
        <property>/engines/engine[0]/running</property>
        <not>
          <property>/sim/current-view/internal</property>
        </not>
      </condition>
      <orientation>
        <x>0.0</x>
        <y>0.0</y>
        <z>180.0</z>
        <inner-cone>180.0</inner-cone>
        <outer-cone>360.0</outer-cone>
        <outer-gain>0.2</outer-gain>
      </orientation>
      <!--volume>
        <property>/velocities/airspeed-kt</property>
        <factor>1</factor>
        <min>.3</min>
        <max>.7</max>
      </volume-->
      <pitch>
        <property>engines/engine[0]/n1</property>
        <offset>0.8</offset>
        <factor>0.01</factor>
        <min>0.0</min>
        <max>100.0</max>
      </pitch>
    </engine>

    <engine>
      <name>engine2</name>
      <mode>looped</mode>
      <path>Aircraft/F-5E/Sounds/new_by_renan/flylogic/eng_idle_out.wav</path>
      <condition>
        <property>/engines/engine[1]/running</property>
        <not>
          <property>/sim/current-view/internal</property>
        </not>
      </condition>
      <orientation>
        <x>0.0</x>
        <y>0.0</y>
        <z>180.0</z>
        <inner-cone>180.0</inner-cone>
        <outer-cone>360.0</outer-cone>
        <outer-gain>0.2</outer-gain>
      </orientation>
      <pitch>
        <property>engines/engine[0]/n1</property>
        <offset>0.8</offset>
        <factor>0.01</factor>
        <min>0.0</min>
        <max>100.0</max>
      </pitch>
    </engine>

    <engine>
      <name>engine1-from-cockpit</name>
      <mode>looped</mode>
      <path>Aircraft/F-5E/Sounds/new_by_renan/flylogic/eng_idle_ins.wav</path>
      <condition>
        <property>/engines/engine[0]/running</property>
        <property>/sim/current-view/internal</property>
      </condition>
      <pitch>
        <property>engines/engine[0]/n1</property>
        <offset>0.8</offset>
        <factor>0.01</factor>
        <min>0.0</min>
        <max>100.0</max>
      </pitch>
    </engine>

    <engine>
      <name>engine2-from-cockpit</name>
      <mode>looped</mode>
      <path>Aircraft/F-5E/Sounds/new_by_renan/flylogic/eng_idle_ins.wav</path>
      <condition>
        <property>/engines/engine[1]/running</property>
        <property>/sim/current-view/internal</property>
      </condition>
      <pitch>
        <property>engines/engine[0]/n1</property>
        <offset>0.8</offset>
        <factor>0.01</factor>
        <min>0.0</min>
        <max>100.0</max>
      </pitch>
    </engine>

    <starter>
      <name>engine startup</name>
      <mode>once</mode>
      <path>Aircraft/F-5E/Sounds/new_by_renan/flylogic/eng_start_out.wav</path>
      <condition>
        <property>/engines/engine/starter</property>
        <and>
          <greater-than>
            <property>/engines/engine/n2</property>
            <value type="double">1</value>
          </greater-than>
          <less-than>
            <property>/engines/engine/n2</property>
            <value type="double">24</value>
          </less-than>
          <not>
            <property>/sim/current-view/internal</property>
          </not>
        </and>
      </condition>
      <volume>1</volume>
    </starter>

    <starter>
      <name>engine startup loop</name>
      <mode>looped</mode>
      <path>Aircraft/F-5E/Sounds/new_by_renan/flylogic/eng_start_loop.wav</path>
      <condition>
        <property>/engines/engine/starter</property>
        <and>
          <greater-than>
            <property>/engines/engine/n2</property>
            <value type="double">24</value>
          </greater-than>
          <less-than>
            <property>/engines/engine/n2</property>
            <value type="double">61</value>
          </less-than>
        </and>
      </condition>
      <volume>1</volume>
    </starter>

    <shutdown>
      <name>engine shutdown</name>
      <mode>once</mode>
      <path>Aircraft/F-5E/Sounds/new_by_renan/flylogic/eng_shut_out.wav</path>
      <condition>
        <not>
          <property>/engines/engine/starter</property>
        </not>
        <and>
          <greater-than>
            <property>/engines/engine/n2</property>
            <value type="double">1</value>
          </greater-than>
          <not>
            <property>/engines/engine/running</property>
          </not>
          <not>
            <property>/sim/current-view/internal</property>
          </not>
        </and>
      </condition>
      <volume>1</volume>
    </shutdown>

    <starter>
      <name>engine startup inside</name>
      <mode>once</mode>
      <path>Aircraft/F-5E/Sounds/new_by_renan/flylogic/eng_start_ins.wav</path>
      <condition>
        <property>/engines/engine/starter</property>
        <and>
          <greater-than>
            <property>/engines/engine/n2</property>
            <value type="double">1</value>
          </greater-than>
          <less-than>
            <property>/engines/engine/n2</property>
            <value type="double">60</value>
          </less-than>
          <property>/sim/current-view/internal</property>
        </and>
      </condition>
      <volume>1</volume>
    </starter>

    <shutdown>
      <name>engine shutdown inside</name>
      <mode>once</mode>
      <path>Aircraft/F-5E/Sounds/new_by_renan/flylogic/eng_shut_ins.wav</path>
      <condition>
        <not>
          <property>/engines/engine/starter</property>
        </not>
        <and>
          <greater-than>
            <property>/engines/engine/n2</property>
            <value type="double">1</value>
          </greater-than>
          <not>
            <property>/engines/engine/running</property>
          </not>
          <property>/sim/current-view/internal</property>
        </and>
      </condition>
      <volume>1</volume>
    </shutdown>

    <engine>
      <name>burner</name>
      <mode>looped</mode>
      <path>Aircraft/F-5E/Sounds/new_by_renan/flylogic/eng_burn.wav</path>
      <condition>
        <or>
          <property>/engines/engine[0]/augmentation</property>
          <property>/engines/engine[1]/augmentation</property>
        </or>
        <not>
          <property>/sim/current-view/internal</property>
        </not>
      </condition>
      <orientation>
        <x>0.0</x>
        <y>0.0</y>
        <z>180.0</z>
        <inner-cone>180.0</inner-cone>
        <outer-cone>360.0</outer-cone>
        <outer-gain>0.2</outer-gain>
      </orientation>
      <volume>
        <property>/controls/throttle[0]</property>
        <factor>1</factor>
        <min>.2</min>
        <max>1</max>
      </volume>
    </engine>

    <engine>
      <name>burner-from-cockpit</name>
      <mode>looped</mode>
      <path>Aircraft/F-5E/Sounds/new_by_renan/flylogic/eng_burn.wav</path>
      <condition>
        <or>
          <property>/engines/engine[0]/augmentation</property>
          <property>/engines/engine[1]/augmentation</property>
        </or>
        <property>/sim/current-view/internal</property>
      </condition>
      <volume>
        <property>/controls/throttle[0]</property>
        <factor>1</factor>
        <min>.2</min>
        <max>1</max>
      </volume>
    </engine>

    <engine>
      <name>compressor-whine-external-engine0</name>
      <path>Sounds/turbojet_fan.wav</path>
      <mode>looped</mode>
      <condition>
        <not>
          <property>/sim/current-view/internal</property>
        </not>
        <greater-than>
          <property>/engines/engine[0]/n2</property>
          <value>1</value>
        </greater-than>
      </condition>
      <orientation>
        <x> 0.0</x>
        <y> 0.0</y>
        <z> 180.0</z>
        <inner-cone>50.0</inner-cone>
        <outer-cone>180.0</outer-cone>
        <outer-gain>0.5</outer-gain>
      </orientation>
      <pitch>
        <property>/engines/engine[0]/n2</property>
        <factor>.001</factor>
      </pitch>
      <volume>
        <property>/engines/engine[0]/n2</property>
        <factor>0.000167</factor>
        <min>0.00</min>
        <max>0.167</max>
      </volume>
    </engine>

    <engine>
      <name>compressor-whine-external-engine1</name>
      <path>Sounds/turbojet_fan.wav</path>
      <mode>looped</mode>
      <condition>
        <not>
          <property>/sim/current-view/internal</property>
        </not>
        <greater-than>
          <property>/engines/engine[1]/n2</property>
          <value>1</value>
        </greater-than>
      </condition>
      <orientation>
        <x> 0.0</x>
        <y> 0.0</y>
        <z> 180.0</z>
        <inner-cone>50.0</inner-cone>
        <outer-cone>180.0</outer-cone>
        <outer-gain>0.5</outer-gain>
      </orientation>
      <pitch>
        <property>/engines/engine[1]/n2</property>
        <factor>.001</factor>
      </pitch>
      <volume>
        <property>/engines/engine[1]/n2</property>
        <factor>0.000167</factor>
        <min>0.00</min>
        <max>0.167</max>
      </volume>
    </engine>

    <tire-rumble>
      <name>tire-rumble</name>
      <mode>looped</mode>
      <path>Aircraft/F-5E/Sounds/new_by_renan/flylogic/gear_roll.wav</path>
      <condition>
        <property>/sim/current-view/internal</property>
        <or>
          <property>/gear/gear[0]/wow</property>
          <property>/gear/gear[1]/wow</property>
          <property>/gear/gear[2]/wow</property>
        </or>
      </condition>
      <volume>
        <property>/velocities/airspeed-kt</property>
        <factor>0.004</factor>
        <max>0.3</max>
      </volume>
    </tire-rumble>

    <gear-wind>
      <name>gear-wind</name>
      <mode>looped</mode>
      <path>Aircraft/F-5E/Sounds/new_by_renan/flylogic/gear_roll.wav</path>
      <condition>
        <property>/sim/current-view/internal</property>
        <greater-than>
          <property>/gear/gear[1]/position-norm[0]</property>
          <value>0.01</value>
        </greater-than>
        <not>
          <property>/gear/gear[0]/wow</property>
          <property>/gear/gear[1]/wow</property>
          <property>/gear/gear[2]/wow</property>
        </not>
      </condition>
      <volume>
        <property>/velocities/airspeed-kt</property>
        <factor>0.002</factor>
        <max>1.0</max>
      </volume>
    </gear-wind>

    <squeal>
      <name>squeal</name>
      <path>Sounds/squeal.wav</path>
      <condition>
        <or>
          <property>/gear/gear[0]/wow</property>
          <property>/gear/gear[1]/wow</property>
          <property>/gear/gear[2]/wow</property>
        </or>
      </condition>
      <pitch>
        <property>/velocities/airspeed-kt</property>
        <factor>0.0025</factor>
        <offset>1.2</offset>
      </pitch>
    </squeal>

    <parked>
      <name>parked</name>
      <mode>looped</mode>
      <path>Aircraft/F-5E/Sounds/new_by_renan/dcs/parked_f5t2_dcs.wav</path>
      <volume>1</volume>
      <condition>
        <and>
          <property>/gear/gear[0]/wow</property>
          <property>/gear/gear[1]/wow</property>
          <property>/gear/gear[2]/wow</property>
        </and>
      </condition>
    </parked>

    <wind>
      <name>wind</name>
      <mode>looped</mode>
      <path>Sounds/wind.wav</path>
      <condition>
        <property>/sim/current-view/internal</property>
      </condition>
      <property>/velocities/airspeed-kt</property>
      <volume>
        <property>/fdm/jsbsim/aero/qbar-psf</property>
        <factor>0.0002</factor>
        <min>0.0</min>
        <max>0.1</max>
      </volume>
      <pitch>
        <property>/fdm/jsbsim/aero/qbar-psf</property>
        <factor>0.002</factor>
        <offset>1.25</offset>
      </pitch>
    </wind>

    <alpha-buffet>
      <name>alpha-buffet</name>
      <mode>looped</mode>
      <condition>
        <property>/sim/current-view/internal</property>
        <greater-than>
          <property>/fdm/jsbsim/aero/alpha-deg</property>
          <value>8.6</value>
        </greater-than>
        <greater-than>
          <property>velocities/airspeed-kt</property>
          <value>50.0</value>
        </greater-than>
      </condition>
      <path>Aircraft/F-5E/Sounds/new_by_renan/flylogic/gear_roll.wav</path>
      <volume>
        <property>/fdm/jsbsim/aero/alpha-deg</property>
        <factor>0.263</factor>
        <max>.3</max>
      </volume>
      <pitch>
        <property>/fdm/jsbsim/aero/alpha-deg</property>
        <factor>0.00005</factor>
      </pitch>
    </alpha-buffet>

    <speedbrake-buffet>
      <name>speedbrake</name>
      <mode>looped</mode>
      <path>Aircraft/F-5E/Sounds/new_by_renan/flylogic/gear_roll.wav</path>
      <condition>
        <property>/sim/current-view/internal</property>
        <property>/surface-positions/speedbrake-pos-norm</property>
      </condition>
      <volume>
        <property>/velocities/airspeed-kt</property>
        <factor>0.0025</factor>
        <max>0.3</max>
      </volume>
    </speedbrake-buffet>

    <!-- SUU-23A gun pod -->
    <guns>
      <name>gunfire</name>
      <mode>looped</mode>
      <condition>
        <property>controls/armament/trigger</property>
      </condition>
      <path>Aircraft/F-5E/Sounds/new_by_renan/warthunder/20mmHispanoMk2WarThunder.wav</path>
    </guns>

    <crash>
      <name>boing</name>
      <condition>
        <property>fdm/jsbsim/systems/crash-detect/crashed</property>
      </condition>
      <path>Aircraft/F-4D/Sounds/boing.wav</path>
    </crash>


    <!-- Gear -->
    <gear>
      <name>gear</name>
      <mode>in-transit</mode>
      <path>Aircraft/F-5E/Sounds/new_by_renan/flylogic/gear_tr.wav</path>
      <property>/gear/gear[0]/position-norm</property>
      <pitch>
        <internal>dt_play</internal>
        <offset>1.0</offset>
        <factor>-0.001</factor>
      </pitch>
    </gear>

    <gear>
      <name>gear-lock</name>
      <path>Aircraft/F-5E/Sounds/new_by_renan/flylogic/gear_ck.wav</path>
      <condition>
        <equals>
          <property>/gear/gear[0]/position-norm</property>
          <value>0</value>
        </equals>
      </condition>
    </gear>

    <voice>
      <name>gear-up-vox</name>
      <path>Aircraft/F-5E/Sounds/voice/gearup.wav</path>
      <condition>
        <equals>
          <property>/gear/gear[0]/position-norm</property>
          <value>0</value>
        </equals> 
      </condition>
    </voice>

    <voice>
      <name>gear-down-vox</name>
      <path>Aircraft/F-5E/Sounds/voice/geardown.wav</path>
      <condition>
        <equals>
          <property>/gear/gear[0]/position-norm</property>
          <value>1</value>
        </equals>
      </condition>
    </voice>

    <voice>
      <name>gear-warning-vox</name>
      <path>Aircraft/F-5E/Sounds/voice/gearnotdown.wav</path>
      <condition>
        <less-than>
          <property>/velocities/airspeed-kt</property>
          <value>180</value>
        </less-than>
        <less-than>
          <property>/position/altitude-agl-ft</property>
          <value>500</value>
        </less-than>
        <not>
          <property>/gear/gear[0]/position-norm</property>
        </not>   
      </condition>
    </voice>

    <voice>
      <name>fuel-low3-vox</name>
      <path>Aircraft/F-5E/Sounds/voice/fuellow.wav</path>
      <condition>
        <less-than>
          <property>/consumables/fuel/total-fuel-lbs</property>
          <value>500</value>
        </less-than>   
      </condition>
    </voice>

    <voice>
      <name>Geforce-breath-vox</name>
      <path>Aircraft/F-5E/Sounds/Geforce.wav</path>
      <condition>
        <greater-than>
          <property>/accelerations/pilot/z-accel-fps_sec</property>
          <value>-161</value>
        </greater-than>   
      </condition>
      <volume>
        <factor>0.9</factor>
      </volume>
    </voice>

    <voice>
      <name>Geforce-vox</name>
      <path>Aircraft/F-5E/Sounds/geforce1.wav</path>
      <condition>
        <less-than>
          <property>/accelerations/pilot/z-accel-fps_sec</property>
          <value>-225</value>
        </less-than>   
      </condition>
      <volume>
        <factor>0.9</factor>
      </volume>
    </voice>


    <canopy>
      <name>canopy</name>
      <mode>in-transit</mode>
      <path>Aircraft/F-5E/Sounds/new_by_renan/flylogic/canopy_tr.wav</path>
      <property>canopy/position-norm</property>
      <volume>
        <factor>0.5</factor>
      </volume>
    </canopy>

    <canopy-close>
      <name>canopy-close2</name>
      <mode>once</mode>
      <path>Aircraft/F-5E/Sounds/new_by_renan/flylogic/canopy_cl.wav</path>
      <condition>
        <less-than-equals>
          <property>canopy/position-norm</property>
          <value>0</value>
        </less-than-equals>
      </condition>
      <volume>
        <factor>0.5</factor>
      </volume>
    </canopy-close>

    <!-- Sonic Boom -->
    <sonicboom>
      <name>Sonic Boom</name>
      <mode>once</mode>
      <path>Aircraft/F-5E/Sounds/sonicboom.wav</path>
      <condition>
        <and>
          <greater-than>
            <property>/velocities/mach</property>
            <value>1.0</value>
          </greater-than>
          <equals>
            <property>/sim/current-view/internal</property>
            <value>false</value>
          </equals>
        </and>
      </condition>
    </sonicboom>

    <switch>
      <name>click on</name>
      <mode>once</mode>
      <path>Aircraft/F-5E/Sounds/click.wav</path>
      <condition>
        <property>/controls/switches/switch</property>
      </condition>
      <volume>
        <factor>1</factor>
      </volume>
    </switch>

    <flap>
      <name>flaps</name>
      <mode>in-transit</mode>
      <path>Aircraft/F-5E/Sounds/new_by_renan/flylogic/flap_tr.wav</path>
      <property>/surface-positions/flap-pos-norm</property>
      <volume>1</volume>
    </flap>

    <missile_launch>
      <name>missile_launch</name>
      <mode>looped</mode>
      <path>Aircraft/F-5E/Sounds/new_by_renan/missile_launch_1s.wav</path>
      <property>controls/armament/trigger2</property>
      <volume>1</volume>
    </missile_launch>

  </fx>

</PropertyList>
