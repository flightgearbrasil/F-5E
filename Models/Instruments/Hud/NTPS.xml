		<y>1</y>
		<width>3</width>
		<height>50</height>
		<option>right</option>
		<option>left</option>

		<option>vertical</option>
		<option>notext</option>
		<major-divisions>50</major-divisions>
		<minor-divisions>0</minor-divisions>
		<input>
			<property>/controls/flight/elevator-trim</property>
			<max>1.0</max>
			<min>-1.0</min>
		</input>
	</gauge>

