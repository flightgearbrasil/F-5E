  <width>25</width>
  <height>80</height>
  <x>-87</x>
  <y>-140</y>
  <halign>left</halign>
  <format>%5.2fnm</format>
  <box>false</box>
  <option>right</option>
  <pointer-width>10</pointer-width>
  <pointer-length>5</pointer-length>
  <input>
          <property>/instrumentation/gps/wp/wp[1]/distance-nm</property>
          </input>
 </label>

 <label>
  <name>NAV</name>
  <width>25</width>
  <height>80</height>
  <x>55</x>
  <y>-87</y>
  <halign>right</halign>
  <format>NAV%2.2f</format>
  <box>false</box>
  <option>right</option>
  <pointer-width>10</pointer-width>
  <pointer-length>5</pointer-length>
