  <pointer-length>5</pointer-length>
  <input>
          <property>fdm/jsbsim/aero/alpha-deg</property>
          </input>
 </label>





 <label>
  <name>Throttle</name>
  <width>25</width>
  <height>80</height>
  <x>50</x>
  <y>10</y>
  <halign>right</halign>
  <format>T%2.2f</format>
  <box>false</box>
  <option>right</option>
