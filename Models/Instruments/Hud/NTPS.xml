 <label>
  <name>Departure Airport</name>
  <width>25</width>
  <height>80</height>
  <x>-85</x>
  <y>-110</y>
  <halign>left</halign>
  <format>WPT:%5s</format>
  <box>false</box>
  <option>right</option>
