  <width>25</width>
  <height>80</height>
  <x>-20</x>
  <y>-88</y>
  <halign>left</halign>
  <format>HDG%2.0f</format>
  <box>false</box>
  <option>right</option>
  <pointer-width>10</pointer-width>
  <pointer-length>5</pointer-length>
  <input>
<property>instrumentation/nav[0]/heading-deg</property>
          </input>
 </label>

<label>
<name>Warning AoA</name>
<x>-15</x>
<y>60</y>
<width>1</width>
<height>1</height>
<condition>
<greater-than>
<property>fdm/jsbsim/aero/alpha-deg</property>
<value>12.0</value>
</greater-than>
</condition>
<format>!!AoA!!%s</format>
<input>
  <property>null</property>
</input>
<halign>left</halign>
<option>right</option>
<blinking>
	<interval>0.1</interval>
</blinking>
</label>

<label>
<name>Warning Terrain</name>
<x>-25</x>
<y>60</y>
<width>1</width>
<height>1</height>
<condition>
<less-than>
    <property>/position/altitude-agl-ft</property>
    <value>500</value>
   </less-than>

<less-than>
<property>/velocities/vertical-speed-fps</property>
<value>0</value>
</less-than>
<not>
    <property>/gear/gear[0]/position-norm</property>
   </not>
</condition>
<format>!!TERRAIN!!%s</format>
<halign>left</halign>
<option>right</option>
<input>
  <property>null</property>
</input>
<blinking>
	<interval>0.1</interval>
</blinking>
</label> 

<label>
<name>Warning Low Fuel</name>
<x>-25</x>
<y>60</y>
<width>1</width>
<height>1</height>
<condition>
<less-than>
    <property>/consumables/fuel/tank/level-gal_us</property>
    <value>50</value>
   </less-than>
</condition>
<format>!!FUEL LOW!!%s</format>
<input>
  <property>null</property>
</input>
<blinking>
	<interval>0.1</interval>
</blinking>
<halign>left</halign>
<option>right</option>
</label>

 <gauge>
  		<name>Rudder</name>
		<x>-85</x>
		<y>-65</y>
		<width>170</width>
		<height>5</height>
		<option>top</option>
 		<option>notext</option>

		<major-divisions>50</major-divisions>
		<minor-divisions>0</minor-divisions>
		<input>
			<property>/controls/flight/rudder</property>
			<max>1.0</max>
			<min>-1.0</min>
		</input>
	</gauge>

	<gauge>
		<name>Elevator Trim</name>
